<web-app>

    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>login_verification</servlet-name>
        <servlet-class>com.karthi.handler.LoginHandler</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login_verification</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>studentCRUD</servlet-name>
        <servlet-class>com.karthi.handler.StudentHandler</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>studentCRUD</servlet-name>
        <url-pattern>/student</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>authenticationFilter</filter-name>
        <filter-class>com.karthi.filter.AuthFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>authenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>